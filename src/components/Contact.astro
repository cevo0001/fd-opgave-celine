---
import PhoneIcon from "../icons/phone.svg";
import ClockIcon from "../icons/clock.svg";
import LocationIcon from "../icons/checkmark.svg";

// midlertidige billeder – du kan erstatte src senere
import ImgMain from "../assets/images/contactmain.svg";
import ImgTop from "../assets/images/contacttop.svg";
import ImgBottom from "../assets/images/contactbottom.svg";
---

<section class="contact">
  <div class="section-inner">
    <div class="contact-inner">
      <!-- Venstre kolonne -->
      <div class="contact-text">
        <p class="contact-sub">Process</p>
        <h2>Contact Us. It’s Easy.</h2>
        <p class="contact-desc">
          Leverage agile frameworks to provide a robust synopsis for high level
          overviews. Iterative approaches to corporate strategy foster
          collaborative.
        </p>

        <div class="contact-info">
          <div class="info-item">
            <div class="icon-circle yellow"><PhoneIcon /></div>
            <div>
              <p>Call Today</p>
              <h4>+1 800 100 900</h4>
            </div>
          </div>

          <div class="info-item">
            <div class="icon-circle green"><ClockIcon /></div>
            <div>
              <p>Monday To Friday</p>
              <h4>9AM – 5PM</h4>
            </div>
          </div>

          <div class="info-item">
            <div class="icon-circle gray"><LocationIcon /></div>
            <div>
              <p>USA Office</p>
              <h4>195 Devonshire St Boston, MA 02110</h4>
            </div>
          </div>
        </div>
      </div>

      <!-- Højre kolonne: billeder -->
      <div class="contact-images">
        <div class="img-main">
          <div class="green-shape"></div>
          <img src={ImgMain.src} alt="Main contact image" />
        </div>

        <div class="img-side">
          <div class="img-top">
            <img src={ImgTop.src} alt="Top contact image" />
            <div class="dots"></div>
          </div>
          <div class="img-bottom">
            <img src={ImgBottom.src} alt="Bottom contact image" />
          </div>
        </div>
      </div>
    </div>
  </div>
</section>

<style>
  @layer components {
    .contact {
      background-color: #fff;
      padding: 6rem 2rem;
    }

    .contact-inner {
      max-width: 1200px;
      margin: 0 auto;
      display: grid;
      grid-template-columns: 1fr 1fr;
      gap: 4rem;
      align-items: center;
    }

    /* ---- Venstre side ---- */
    .contact-sub {
      text-transform: uppercase;
      font-size: 0.9rem;
      color: #888;
      letter-spacing: 1px;
      margin-bottom: 0.5rem;
    }

    .contact-text h2 {
      font-size: 2rem;
      color: #000;
      margin-bottom: 1rem;
    }

    .contact-desc {
      color: #444;
      line-height: 1.6;
      max-width: 95%;
      margin-bottom: 2rem;
    }

    .contact-info {
      display: flex;
      flex-direction: column;
      gap: 1.5rem;
    }

    .info-item {
      display: flex;
      align-items: center;
      gap: 1rem;
    }

    .icon-circle {
      width: 42px;
      height: 42px;
      border-radius: 50%;
      display: flex;
      align-items: center;
      justify-content: center;
    }

    .icon-circle svg {
      width: 20px;
      height: 20px;
    }

    .icon-circle.yellow {
      background-color: #ffe178;
    }
    .icon-circle.green {
      background-color: #b4e1a1;
    }
    .icon-circle.gray {
      background-color: #ddd;
    }

    .info-item p {
      margin: 0;
      font-size: 0.9rem;
      color: #555;
    }

    .info-item h4 {
      margin: 0.2rem 0 0;
      font-size: 1rem;
      font-weight: 700;
      color: #000;
    }

    /* ---- Højre side ---- */
    .contact-images {
      position: relative;
      display: grid;
      grid-template-columns: 1fr 1fr;
      grid-template-rows: auto auto;
      gap: 1rem;
    }

    .img-main {
      grid-column: 1;
      grid-row: 1 / span 2;
      position: relative;
    }

    .img-main img {
      border-radius: 12px;
    }

    .green-shape {
      position: absolute;
      bottom: 0;
      left: -1.5rem;
      width: 90%;
      height: 25%;
      background-color: #4caf50;
      border-radius: 0.75rem;
      z-index: 0;
    }

    .img-main img {
      border-radius: 12px;
      position: relative;
      z-index: 2;
    }

    .img-side {
      display: flex;
      flex-direction: column;
      gap: 1rem;
    }

    .img-top,
    .img-bottom {
      position: relative;
    }

    .img-top img,
    .img-bottom img {
      border-radius: 12px;
    }

    /* prikmønster bag billede */
    .img-top img {
      position: relative;
      z-index: 2;
    }
    .dots {
      position: absolute;
      top: -25px;
      right: -20px;
      width: 200px;
      height: 250px;
      background-image: radial-gradient(#b39446 2px, transparent 1px);
      background-size: 15px 17px;
      z-index: 0;
    }

    @media (max-width: 900px) {
      .contact-inner {
        grid-template-columns: 1fr;
      }

      .contact-images {
        order: -1;
        grid-template-columns: 1fr 1fr;
      }
    }
  }
</style>
