---
//@ts-nocheck
import servicesData from "@data/services.json";
console.log(servicesData);
---

<ul class="services-list">
  {
    servicesData.services.map((service) => (
      <li>
        <h2>{service.title}</h2>
        <p>{service.description}</p>
        <a href="#0">{service.buttonText}</a>
      </li>
    ))
  }
</ul>

<style>
  @layer components {
    .services-list {
      display: grid;
      grid-template-columns: repeat(3, minmax(0, 1fr)); /* safe 1fr */
      gap: 1rem;
      z-index: 100;
      color: white;
      max-width: 900px;
      margin: -110px auto 0 auto; /* overlap hero */
      padding: 0 2rem;
      list-style: none;
      align-items: stretch; /* s√∏rg for ens korth√∏jde */
    }

    /* g√∏r hvert kort til en lille grid med 3 r√¶kker:
   1) overskrift  2) tekst som fleksibel  3) knap i bunden */
    .services-list li {
      background-color: rgb(40, 40, 40);
      padding: 1.5rem;
      border-radius: 1rem;
      box-shadow: 0 5px 15px rgba(255, 255, 255, 0.1);
      text-align: center;
      transition: transform 0.3s;
      min-width: 210px;

      display: grid;
      grid-template-rows: auto 1fr auto; /* üí° magien */
      height: 100%;
    }

    .services-list li:hover {
      transform: translateY(-10px);
    }

    .services-list li h2 {
      font-size: 1.2rem;
      margin: 0 0 1rem;
      line-height: 1.2;
    }

    .services-list li p {
      margin: 0 0 1.5rem;
      font-size: 0.9rem;
      line-height: 1.4;
      /* ingen fixed height ‚Äì r√¶kkerne h√•ndterer det */
    }

    .services-list li a {
      text-decoration: none;
      color: white;
      background-color: #000;
      padding: 0.5rem 1.5rem;
      border-radius: 0.5rem;
      font-weight: 500;

      justify-self: center; /* centrer knappen horisontalt */
      align-self: end; /* fasthold i bunden */
    }
  }
</style>
