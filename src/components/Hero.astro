---
import { Image } from "astro:assets";
import Services from "./Services.astro";
import CEOImage from "@assets/images/ceo.png";
---

<section class="hero">
  <div class="hero-grid">
    <!-- Venstre halvdel -->
    <div class="hero-text">
      <h1>Empowering Your Business Growth</h1>
      <p>
        Discover tailored strategies and expert insights to take your business
        to the next level. Let us help you navigate challenges and achieve
        sustainable success.
      </p>
      <a href="#0" class="hero-btn">Book a Meeting</a>
    </div>

    <!-- HÃ¸jre halvdel -->
    <div class="hero-image">
      <Image src={CEOImage} alt="CEO" />
    </div>
  </div>

  <!-- Services overlapper -->
  <div class="hero-services">
    <Services />
  </div>
</section>

<style>
  @layer components {
    .hero {
      width: 100%;
      background-color: #000; /* sort baggrund som i designet */
      color: white;
      position: relative;
      padding-bottom: 7rem; /* plads til overlap med services */
      /* overflow: hidden; */
    }

    .hero-grid {
      display: grid;
      grid-template-columns: 1fr 1fr;
      align-items: center;
      max-width: 1200px;
      margin: 0 auto;
      padding: 4rem 2rem;
      gap: 2rem;
    }

    .hero-text {
      display: flex;
      flex-direction: column;
      justify-content: center;
      gap: 1.5rem;
      z-index: 1;
    }

    .hero-text h1 {
      font-size: 2.8rem;
      font-weight: 700;
      line-height: 1.2;
    }

    .hero-text p {
      font-size: 1rem;
      line-height: 1.7;
      color: #d1d1d1;
      max-width: 480px;
    }

    .hero-btn {
      background-color: #fff;
      color: #000;
      padding: 0.75rem 2rem;
      border-radius: 0.5rem;
      font-weight: 600;
      text-decoration: none;
      width: fit-content;
      transition: background 0.3s;
    }

    .hero-btn:hover {
      background-color: #e5e5e5;
    }

    .hero-image {
      display: flex;
      justify-content: flex-end;
    }

    .hero-image img {
      border-radius: 0.5rem;
      width: 100%;
      max-width: 500px;
      height: auto;
    }

    /* --- overlap for services --- */
    .hero-services {
      position: absolute;
      left: 50%;
      bottom: -3rem;
      transform: translateX(-50%);
      width: 100%;
      max-width: 1200px;
      z-index: 5;
    }
  }
</style>
