---
import { Image } from "astro:assets";
import Services from "./Services.astro";
import CEOImage from "@assets/images/ceo.png";
---

<section class="hero">
  <div class="hero-inner">
    <!-- Venstre halvdel -->
    <div class="hero-content">
      <h1>Empowering Your Business Growth</h1>
      <p>
        Discover tailored strategies and expert insights to take your business
        to the next level. Let us help you navigate challenges and achieve
        sustainable success.
      </p>
      <a href="#0" class="hero-btn">Book a Meeting</a>
    </div>

    <!-- HÃ¸jre halvdel -->
    <div class="hero-image">
      <Image src={CEOImage} alt="CEO" />
    </div>
  </div>
</section>
<Services />

<style>
  @layer components {
    .hero {
      z-index: 0;
      width: 100%;
      background-color: #f3f4f6;
      padding: 1rem 10rem 1rem 10rem;
      position: relative;
    }

    .hero-inner {
      display: flex;
      margin: 0 auto;
      gap: 0rem;
      align-items: center;
      justify-content: space-between;
    }

    .hero-content {
      flex: 1.5;
      display: flex;
      flex-direction: column;
      gap: 0.2rem;
    }

    .hero-content h1 {
      font-size: 2.5rem;
      font-weight: 700;
    }

    .hero-content p {
      font-size: 0.9rem;
      line-height: 1.8;
      padding: 10px 0 20px 0;
      padding-right: 20px;
    }

    .hero-btn {
      display: inline-block;
      padding: 0.5rem 5rem;
      background-color: #000000;
      color: white;
      width: fit-content;
      border-radius: 0.5rem;
      text-decoration: none;
      font-weight: 500;
    }

    .hero-image {
      flex: 3;
      display: flex;
      justify-content: flex-end;
      place-self: right;
    }

    .hero-image img {
      width: 100%;
      height: auto;
    }
  }
</style>
